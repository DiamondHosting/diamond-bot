# Discord Bot Configuration
# Discord 機器人設定
TOKEN=your_discord_bot_token_here           # 機器人 Token
CLIENT_ID=your_client_id_here               # 機器人 Client ID
GUILD_ID=your_guild_id_here                 # Discord 伺服器 ID

# Environment
# 執行環境
NODE_ENV=production

# Database Configuration
# 資料庫設定
DB_BACKUP_INTERVAL=6                        # 備份間隔（小時）
MAX_BACKUP_COUNT=7                          # 最多保留備份數量

# Bot Settings
# 機器人設定
BOT_PREFIX=!                                # 指令前綴
BOT_STATUS=online                           # 機器人狀態
BOT_ACTIVITY=鑽石託管服務                   # 狀態顯示內容

# Logging
# 日誌設定
LOG_LEVEL=info                              # 日誌等級
LOG_FILE=logs/bot.log                       # 日誌檔案路徑

# Features
# 功能開關
ENABLE_VOICE=true                           # 啟用語音功能
ENABLE_GIVEAWAYS=true                       # 啟用抽獎功能
ENABLE_POLLS=true                           # 啟用投票功能
ENABLE_MUSIC=true                           # 啟用音樂功能

# Rate Limiting
# 指令速率限制
COMMAND_COOLDOWN=3000                       # 指令冷卻時間（毫秒）
MAX_COMMANDS_PER_MINUTE=20                  # 每分鐘最大指令數

# Security
# 權限設定
ADMIN_USER_IDS=123456789012345678,987654321098765432      # 管理員用戶 ID（多個用逗號分隔）
MODERATOR_ROLE_IDS=123456789012345678,987654321098765432  # 版主角色 ID（多個用逗號分隔）